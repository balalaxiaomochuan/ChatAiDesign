<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- 控制台输出配置 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level [%logger{1}] [%M:%L] [traceId:%X{traceId}] [userId:%X{userId}] - %msg%n"/>
        </Console>

        <!-- 文件输出配置 -->
        <RollingFile name="RollingFile" fileName="/opt/cloud/chataidesign/chataidesign.log"
                     filePattern="/opt/cloud/chataidesign/chataidesign-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%t] [%-5level] [%logger{1}] [%M:%L] [traceId:%X{traceId}] [userId:%X{userId}] - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- 根日志配置 -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>
